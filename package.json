{
  "name": "site-blocker",
  "version": "1.0.2",
  "description": "Block distracting websites via /etc/hosts",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc",
    "start": "npm run build && electron .",
    "dev": "tsc && electron .",
    "test": "vitest run",
    "pack": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "typescript": "^5.3.0",
    "vitest": "^3.0.0"
  },
  "build": {
    "appId": "com.siteblocker.app",
    "productName": "Site Blocker",
    "icon": "assets/icon.icns",
    "files": [
      "dist/**/*",
      "assets/**/*"
    ],
    "extraResources": [
      {
        "from": "../access_logger.py",
        "to": "access_logger.py"
      }
    ],
    "mac": {
      "notarize": false,
      "category": "public.app-category.utilities",
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "assets/icon.icns",
      "entitlements": "entitlements.mac.plist",
      "entitlementsInherit": "entitlements.mac.plist",
      "hardenedRuntime": true
    }
  }
}
